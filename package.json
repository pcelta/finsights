{
  "name": "finsinghts",
  "version": "0.0.1",
  "description": "Finsinghts monorepo",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "pnpm --filter @finsinghts/backend",
    "frontend": "pnpm --filter @finsinghts/frontend",
    "shared": "pnpm --filter @finsinghts/shared",
    "dev:backend": "pnpm --filter @finsinghts/backend start:dev",
    "dev:frontend": "pnpm --filter @finsinghts/frontend start",
    "build:backend": "pnpm --filter @finsinghts/backend build",
    "build:frontend": "pnpm --filter @finsinghts/frontend build",
    "build:shared": "pnpm --filter @finsinghts/shared build",
    "build": "pnpm build:shared && pnpm build:backend && pnpm build:frontend",
    "lint": "pnpm --filter @finsinghts/backend lint",
    "test": "pnpm --filter @finsinghts/backend test"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  }
}
